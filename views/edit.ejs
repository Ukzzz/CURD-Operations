<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit User</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      // Theme toggle logic
      function toggleTheme() {
        const html = document.documentElement;
        if (html.classList.contains('dark')) {
          html.classList.remove('dark');
          html.classList.remove('black');
          localStorage.setItem('theme', 'light');
        } else if (html.classList.contains('black')) {
          html.classList.remove('black');
          localStorage.setItem('theme', 'light');
        } else {
          html.classList.add('dark');
          localStorage.setItem('theme', 'dark');
        }
      }
      function toggleBlackTheme() {
        const html = document.documentElement;
        html.classList.remove('dark');
        html.classList.add('black');
        localStorage.setItem('theme', 'black');
      }
      window.onload = () => {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else if (theme === 'black') {
          document.documentElement.classList.add('black');
        }
      }
    </script>
    <style>
      html.black body {
        background: #000 !important;
      }
      html.black .bg-gradient-to-tr,
      html.black .bg-gradient-to-r {
        background: #000 !important;
      }
      html.black .text-white,
      html.black .text-gray-500,
      html.black .text-blue-700 {
        color: #fff !important;
      }
      html.black input,
      html.black textarea {
        background: #222 !important;
        color: #fff !important;
        border-color: #444 !important;
      }
      html.black .shadow-inner,
      html.black .shadow-xl,
      html.black .shadow-2xl {
        box-shadow: none !important;
      }
      html.black .border,
      html.black .ring-4 {
        border-color: #222 !important;
      }
    </style>
  </head>
  <body class="bg-gradient-to-tr from-slate-100 via-slate-200 to-blue-100 dark:from-slate-900 dark:via-slate-800 dark:to-black min-h-screen flex flex-col transition-colors duration-500">
    <header class="w-full py-12 flex flex-col items-center bg-gradient-to-r from-slate-200 via-blue-100 to-slate-300 dark:from-slate-900 dark:via-slate-800 dark:to-black shadow-2xl rounded-b-3xl mb-12 transition-colors duration-500">
      <div class="flex w-full justify-between items-center max-w-3xl px-4">
        <h1 class="text-5xl font-black text-slate-800 dark:text-white tracking-widest drop-shadow-2xl">Edit User</h1>
        <div class="flex gap-2">
          <button onclick="toggleTheme()" class="ml-4 px-4 py-2 rounded-xl bg-slate-200/60 dark:bg-slate-900/60 text-slate-900 dark:text-blue-200 font-bold shadow hover:bg-slate-300 hover:dark:bg-slate-800 transition">
            <span class="hidden dark:inline">ðŸŒž Light</span>
            <span class="inline dark:hidden">ðŸŒ™ Dark</span>
          </button>
          <button onclick="toggleBlackTheme()" class="px-4 py-2 rounded-xl bg-black text-white font-bold shadow hover:bg-gray-800 transition">ðŸ–¤ Black</button>
        </div>
      </div>
      <p class="mt-4 text-xl text-slate-700 dark:text-blue-200 font-medium tracking-wide">
        Update your information below.
      </p>
    </header>
    <main class="flex-1 flex flex-col items-center justify-center">
      <div class="w-full max-w-lg mx-auto bg-white/80 dark:bg-slate-900/80 backdrop-blur-2xl rounded-3xl shadow-2xl p-12 border border-slate-200 dark:border-slate-700 ring-4 ring-blue-200/30">
        <h2 class="text-3xl font-extrabold text-center text-blue-700 dark:text-blue-300 mb-10 tracking-tight drop-shadow-lg">
          Edit User
        </h2>
        <form action="/edit/<%= user._id %>?_method=PUT" method="POST" class="space-y-8">
          <div>
            <label for="name" class="block text-lg font-semibold text-blue-700 dark:text-blue-300 mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              value="<%= user.name %>"
              placeholder="Enter your Name"
              class="w-full px-6 py-4 border-2 border-blue-200 dark:border-blue-700 rounded-2xl shadow-lg focus:outline-none focus:ring-4 focus:ring-blue-300 focus:border-blue-400 dark:focus:border-blue-500 transition duration-200 hover:border-blue-400 bg-blue-50/70 dark:bg-gray-800 text-lg font-medium placeholder-blue-300 dark:placeholder-blue-400"
              required
            />
          </div>
          <div>
            <label for="age" class="block text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">Age</label>
            <input
              type="number"
              id="age"
              name="age"
              value="<%= user.age %>"
              placeholder="Enter your Age"
              class="w-full px-6 py-4 border-2 border-slate-200 dark:border-slate-700 rounded-2xl shadow-lg focus:outline-none focus:ring-4 focus:ring-slate-300 focus:border-slate-400 dark:focus:border-slate-500 transition duration-200 hover:border-slate-400 bg-slate-50/70 dark:bg-gray-800 text-lg font-medium placeholder-slate-300 dark:placeholder-slate-400"
              required
            />
          </div>
          <div>
            <label for="cnic" class="block text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">CNIC</label>
            <input
              type="text"
              id="cnic"
              name="cnic"
              value="<%= user.cnic %>"
              placeholder="Enter your CNIC"
              class="w-full px-6 py-4 border-2 border-slate-200 dark:border-slate-700 rounded-2xl shadow-lg focus:outline-none focus:ring-4 focus:ring-slate-300 focus:border-slate-400 dark:focus:border-slate-500 transition duration-200 hover:border-slate-400 bg-slate-50/70 dark:bg-gray-800 text-lg font-medium placeholder-slate-300 dark:placeholder-slate-400"
              required
            />
          </div>
          <div>
            <label for="location" class="block text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">Location</label>
            <input
              type="text"
              id="location"
              name="location"
              value="<%= user.location %>"
              placeholder="Enter your Location"
              class="w-full px-6 py-4 border-2 border-slate-200 dark:border-slate-700 rounded-2xl shadow-lg focus:outline-none focus:ring-4 focus:ring-slate-300 focus:border-slate-400 dark:focus:border-slate-500 transition duration-200 hover:border-slate-400 bg-slate-50/70 dark:bg-gray-800 text-lg font-medium placeholder-slate-300 dark:placeholder-slate-400"
              required
            />
          </div>
          <div>
            <label for="email" class="block text-lg font-semibold text-blue-700 dark:text-blue-300 mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= user.email %>"
              placeholder="Enter your Email"
              class="w-full px-6 py-4 border-2 border-blue-200 dark:border-blue-700 rounded-2xl shadow-lg focus:outline-none focus:ring-4 focus:ring-blue-300 focus:border-blue-400 dark:focus:border-blue-500 transition duration-200 hover:border-blue-400 bg-blue-50/70 dark:bg-gray-800 text-lg font-medium placeholder-blue-300 dark:placeholder-blue-400"
              required
            />
          </div>
          <div>
            <label for="image" class="block text-lg font-semibold text-slate-700 dark:text-slate-300 mb-2">Image URL</label>
            <input
              type="url"
              id="image"
              name="image"
              value="<%= user.image %>"
              placeholder="Enter your Image URL"
              class="w-full px-6 py-4 border-2 border-slate-200 dark:border-slate-700 rounded-2xl shadow-lg focus:outline-none focus:ring-4 focus:ring-slate-300 focus:border-slate-400 dark:focus:border-slate-500 transition duration-200 hover:border-slate-400 bg-slate-50/70 dark:bg-gray-800 text-lg font-medium placeholder-slate-300 dark:placeholder-slate-400"
              required
            />
          </div>
          <input
            type="submit"
            class="w-full py-4 px-8 bg-gradient-to-r from-blue-500 via-slate-500 to-slate-700 dark:from-slate-900 dark:via-slate-800 dark:to-black text-white font-extrabold rounded-2xl shadow-xl hover:from-blue-600 hover:via-slate-600 hover:to-slate-800 hover:dark:from-slate-800 hover:dark:via-slate-900 hover:dark:to-black transition-all duration-300 transform hover:-translate-y-1 hover:scale-105 text-2xl tracking-wide border-2 border-white/30"
            value="Update"
          >
        </form>
        <div class="mt-8 flex justify-center">
          <a href="/read" class="inline-block px-8 py-3 bg-gradient-to-r from-blue-500 via-slate-500 to-slate-700 dark:from-slate-900 dark:via-slate-800 dark:to-black text-white rounded-xl shadow-lg font-bold text-lg hover:from-blue-600 hover:via-slate-600 hover:to-slate-800 hover:dark:from-slate-800 hover:dark:via-slate-900 hover:dark:to-black transition-all duration-300 transform hover:-translate-y-1 hover:scale-105">
            View Users
          </a>
        </div>
      </div>
    </main>
    <footer class="w-full py-8 text-center text-gray-500 dark:text-gray-300 text-lg mt-16 bg-gradient-to-r from-slate-100 via-blue-100 to-slate-300 dark:from-slate-800 dark:via-slate-900 dark:to-black rounded-t-3xl shadow-inner font-semibold tracking-wide transition-colors duration-500">
      &copy; <%= new Date().getFullYear() %> User Registration App. All rights reserved.
    </footer>
  </body>
</html>