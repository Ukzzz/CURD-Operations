<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VIEW</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gradient-to-br from-pink-100 via-purple-100 to-blue-100 min-h-screen flex flex-col">
    <!-- Header -->
    <header class="w-full py-6 flex justify-center items-center mb-6">
      <h1 class="text-4xl font-bold text-blue-700 tracking-wide drop-shadow-lg">Registered Users</h1>
    </header>

    <!-- Users Grid -->
    <main class="flex-1">
      <div class="max-w-4xl mx-auto grid grid-cols-1 sm:grid-cols-2 gap-8">
        <% users.forEach(user => { %>
        <div
          class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-2xl p-6 border border-gray-200 flex flex-col items-center gap-4 transition-transform duration-300 hover:scale-105"
        >
          <!-- Profile Image -->
          <div
            class="w-32 h-32 rounded-full overflow-hidden shadow-lg border-4 border-purple-200"
          >
            <img
              src="<%= user.image %>"
              alt="Profile"
              class="object-cover w-full h-full transition-transform duration-300 hover:scale-110"
            />
          </div>

          <!-- User Info -->
          <div class="text-center">
            <h4 class="text-xl font-bold text-gray-800"><%= user.name %></h4>
            <p class="text-purple-600 font-medium text-sm">Email:</p>
            <p class="text-blue-600 font-semibold"><%= user.email %></p>
          </div>
          <!-- User ID -->
           <a
            href="/delete/<%= user._id %>"
            class="mt-2 inline-block px-6 py-2 bg-gradient-to-r from-red-400 via-pink-500 to-purple-500 text-white rounded-full shadow hover:from-red-500 hover:via-pink-600 hover:to-purple-600 transition-all duration-300 font-semibold"
            onclick="return confirm('Are you sure you want to delete this user?');"
          >
            Delete
          </a>
        </div>
        <% }) %>
      </div>
    </main>

    <!-- Navigation Buttons -->
    <div class="mt-10 flex justify-center gap-4">
      <a
        href="/"
        class="inline-block px-8 py-3 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-white rounded-lg shadow-md font-semibold hover:from-blue-600 hover:via-purple-600 hover:to-pink-600 transition-all duration-300"
      >
        Back to Home
      </a>
      <a
        href="/read"
        class="inline-block px-8 py-3 bg-gradient-to-r from-pink-400 via-purple-400 to-blue-400 text-white rounded-lg shadow-md font-semibold hover:from-pink-500 hover:via-purple-500 hover:to-blue-500 transition-all duration-300"
      >
        Refresh List
      </a>
    </div>

    <!-- Footer -->
    <footer class="w-full py-4 text-center text-gray-500 text-sm mt-8">
      &copy; <%= new Date().getFullYear() %> User Registration App. All rights reserved.
    </footer>
  </body>
